[mysqld]
datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock
#开启binlog
log-bin=mysql-bin
#配置serverid
server-id=1
#设置日志格式
binlog_format=ROW
#取消sql——mode限制
sql_mode=
#设置默认字符集
character_set_server = utf8
#开启GTID
enforce_gtid_consistency = on
gtid_mode = on

#binlog_row_image设置为FULL
binlog_row_image = FULL 